{% extends 'base.html.twig' %}

{% block title %}User Index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center">User Index</h1>

        <!-- Table -->
        <div class="table-responsive">
            <table class="table custom-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Password</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.roles ? user.roles|json_encode : 'No roles' }}</td>
                        <td>{{ user.password }}</td>
                        <td>
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-info btn-sm">Show</a>
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Create New User Button -->
        <div class="mt-3 text-center">
            <a href="{{ path('app_user_new') }}" class="btn btn-primary custom-btn">Create New User</a>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        /* Custom table styling */
        .custom-table {
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            border: 1px solid #ddd;
        }

        .custom-table thead {
            background-color: #007bff;
            color: white;
        }

        .custom-table th, .custom-table td {
            text-align: center;
            padding: 12px 15px;
        }

        .custom-table tbody tr:hover {
            background-color: #f8f9fa;
            cursor: pointer;
        }

        .custom-table tbody tr:nth-child(odd) {
            background-color: #f9f9f9;
        }

        /* Button styling */
        .custom-btn {
            padding: 10px 20px;
            border-radius: 30px;
            transition: background-color 0.3s ease;
        }

        .custom-btn:hover {
            background-color: #0056b3;
        }

        .btn-info {
            background-color: #17a2b8;
        }

        .btn-warning {
            background-color: #ffc107;
        }

        .btn-info:hover {
            background-color: #138496;
        }

        .btn-warning:hover {
            background-color: #e0a800;
        }

        /* Table responsive adjustments */
        @media (max-width: 768px) {
            .custom-table thead {
                font-size: 12px;
            }

            .custom-table td {
                font-size: 14px;
            }

            .custom-btn {
                width: 100%;
                padding: 12px 0;
            }
        }
    </style>
{% endblock %}
